@using Pharmacy_Management_System.ViewModel
@model MedicineViewModel
@{
    SelectList StockList = new SelectList(Model.Stocks,"Id","Name");
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEdit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input  type="hidden"  value="@Model.Id" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input value="@Model.Name" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input value="@Model.Description" class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input value="@Model.Quantity" class="form-control" asp-for="Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerUnit" class="control-label"></label>
                <input value="@Model.PricePerUnit" class="form-control" asp-for="PricePerUnit" />
                <span asp-validation-for="PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input value="@Model.ExpiryDate" class="form-control" asp-for="ExpiryDate" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturingDate" class="control-label"></label>
                <input asp-for="@Model.ManufacturingDate" class="form-control" value="@Model.ManufacturingDate" />
                <span asp-validation-for="ManufacturingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockId" class="control-label"></label>
                @* <input asp-for="@Model.ManufacturingDate" class="form-control" /> *@
                <select asp-for="StockId" asp-items="StockList" class="form-control">
                </select>
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Medicine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>