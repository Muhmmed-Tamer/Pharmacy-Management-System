@model Pharmacy_Management_System.ViewModel.AddUserViewModelWithAdminstroatorViewModel

@{
    ViewData["Title"] = "Profile";
    SelectList RolesList = new SelectList(Model.Roles, "Id", "Name");
}

<h1>Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveProfile">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input value="@Model.UserName" class="form-control" asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input value="@Model.Email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input value="@Model.PhoneNumber" class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthOfDate" class="control-label"></label>
                <input value="@Model.BirthOfDate" class="form-control" asp-for="BirthOfDate" />
                <span asp-validation-for="BirthOfDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                @* <input asp-for="RoleId" class="form-control" /> *@
                <select asp-items="RolesList" asp-for="RoleId" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
